<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center mt-5">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg my-5">
          <h4>Faça seu cadastro</h4>
          <p class="mb-1">
            Se você ainda não tem conta, preencha o formulário abaixo:
          </p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label>Seu e-mail</label>
              <input
                type="email"
                id="email1"
                class="email form-control"
                name="email"
              />
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input
                type="password"
                id="senha1"
                class="senha form-control"
                name="password"
              />
            </div>
            <button type="submit" id="send1" class="send btn btn-primary mt-3">
              Criar minha conta
            </button>
          </form>
        </div>

        <div class="col-lg my-5">
          <h4>Faça seu login</h4>

          <p class="mb-4">Se você já tem uma conta, faça login abaixo:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label>Seu e-mail</label>
              <input
                type="email"
                id="email2"
                class="email form-control"
                name="email"
              />
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input
                type="password"
                id="senha2"
                class="senha form-control"
                name="password"
              />
            </div>
            <button type="submit" id="send2" class="send btn btn-primary mt-3">
              Entrar
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
